<div class="container">
  <h1>Informations</h1>
  <div class="description">
    <p style="font-weight: bold; font-size: 20px" ><%= @event.name %></p>
    <p>DÃ©but : <%= @event.starts_at.strftime("%d/%m/%Y") %></p>
    <p>Fin : <%= @event.ends_at.strftime("%d/%m/%Y") %></p>
    <p>Lieu : <%= @event.location %></p>
    <p>Participants max : <%= @event.max_booking %></p>
    <p>Nombre d'inscrits : <%= @booking_count %></p>
    <p>Description : <%= @event.description %></p>
    <% if @booking %>
      <%= link_to "Cancel", booking_path(@booking), method: :patch, class: 'btn btn-flat-primary' %>
    <% else  %>
      <%= link_to "Book", event_bookings_path(@event), method: :post, class: 'btn btn-flat-primary' %>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

