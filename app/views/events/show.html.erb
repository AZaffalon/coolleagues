<div class="container">
  <h1>Informations</h1>
  <div class="description col-lg-6">
    <p style="font-weight: bold; font-size: 20px" ><%= @event.name %></p>
    <p>Début : <%= @event.starts_at.strftime("%d/%m/%Y") %></p>
    <p>Fin : <%= @event.ends_at.strftime("%d/%m/%Y") %></p>
    <p>Lieu : <%= @event.location %></p>
    <p>Participants max : <%= @event.max_booking %></p>
    <p>Nombre d'inscrits : <%= @event.bookings.count %></p>
    <p>Description : <%= @event.description %></p>
    <%= link_to "Réserver", new_event_booking_path(@event), class: 'btn btn-flat-primary' %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

