<div class="coolleagues-index">
  <h1>My Coolleagues</h1>

 <!-- Searchbar of users  -->
<div class="searchbar-user">
  <%= form_tag users_path, class: 'searchbar', method: :get do %>
    <div>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Coolleagues" %>
    </div>
    <%= submit_tag "Search", class: "btn btn-flat-primary" %>
  <% end %>
</div>

  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
      <div class="card-user">
          <% if user.photo.attached? %>
            <%= cl_image_tag user.photo.key %>
          <% end %>
        <div class="card-user-infos">
          <div id="flex-column">
            <h2><%= link_to user.nickname, user_path(user) %></h2>
            <p><strong><%= user.first_name %> <%= user.last_name %></strong></p>
          </div>
          <div id="flex-column", style="margin-left: 20px">
            <% user.hobby_list.each do |hobby| %>
              <span class="tag-show-event"><%= hobby %></span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

